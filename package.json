{
  "name": "vscode-trello",
  "displayName": "Trello",
  "description": "Get Trello cards, lists, and boards inside of VS Code.",
  "version": "0.0.1",
  "publisher": "Ho-Wan",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:testView",
    "onView:trelloTreeView",
    "onCommand:trello.test",
    "onCommand:trello.setKey",
    "onCommand:trello.setToken",
    "onCommand:trello.getBoards",
    "onCommand:trello.getLists",
    "onCommand:trello.getCards",
    "onCommand:trello.showCard"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "trello.test",
        "title": "Trello: Check Key and Token"
      },
      {
        "command": "trello.setKey",
        "title": "Trello: Set Key"
      },
      {
        "command": "trello.setToken",
        "title": "Trello: Set Token"
      },
      {
        "command": "trello.getBoards",
        "title": "Trello: Get Starred Boards"
      },
      {
        "command": "trello.getLists",
        "title": "Trello: Get Lists For Selected Board"
      },
      {
        "command": "trello.getCard",
        "title": "Trello: Get Card"
      },
      {
        "command": "trello.showCard",
        "title": "Trello: Show Selected Card"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "view-trello",
          "title": "Trello",
          "icon": "images/T-D.png"
        }
      ]
    },
    "views": {
      "view-trello": [
        {
					"id": "testView",
					"name": "Test View"
        },
        {
					"id": "trelloTreeView",
					"name": "Trello Tree View"
        },
        {
          "id": "trelloCards",
          "name": "Cards on Selected List"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.21",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "event-stream": "^3.3.4"
  }
}
