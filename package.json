{
  "name": "vscode-trello-viewer",
  "displayName": "Trello Viewer",
  "description": "Show Trello cards inside of VS Code, and browse boards and lists in tree view.",
  "version": "0.0.1",
  "publisher": "Ho-Wan",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "trelloViewer.test",
        "title": "Trello: Check Key and Token"
      },
      {
        "command": "trelloViewer.setKey",
        "title": "Trello: Set Key"
      },
      {
        "command": "trelloViewer.setToken",
        "title": "Trello: Set Token"
      },
      {
        "command": "trelloViewer.showCard",
        "title": "Trello: Show Selected Card"
      },
      {
        "command": "trelloViewer.refresh",
        "title": "Trello: Refresh",
        "icon": {
          "light": "images/light/refresh.svg",
          "dark": "images/dark/refresh.svg"
        }
      }
    ],
    "configuration":{
      "title": "Trello Viewer",
      "properties": {
        "trelloViewer.viewColumn" : {
          "type": "integer",
          "default": 2,
          "description": "Specifies where markdown previewer opens at.\n -1 = Active, -2 = Beside, 1 = One, 2 = Two, etc.",
          "scope": "resource"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "trelloViewer.refresh",
          "when": "view == trelloTreeView",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "trelloViewer",
          "title": "Trello Viewer",
          "icon": "images/T-D.png"
        }
      ]
    },
    "views": {
      "trelloViewer": [
        {
          "id": "testView",
          "name": "Test View"
        },
        {
          "id": "trelloTreeView",
          "name": "Starred Boards"
        },
        {
          "id": "trelloCards",
          "name": "Cards on Favourite List"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.21",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "event-stream": "^3.3.4"
  }
}
