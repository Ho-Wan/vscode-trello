{
  "name": "vscode-trello",
  "displayName": "Trello",
  "description": "Get Trello cards, lists, and boards inside of VS Code.",
  "version": "0.0.1",
  "publisher": "Ho-Wan",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:trello.sayHello",
    "onCommand:trello.getCard"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "trello.sayHello",
        "title": "Hello World"
      },
      {
        "command": "trello.getCard",
        "title": "Gets Trello Card"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.21",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "trello": "^0.9.0"
  }
}
