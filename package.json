{
  "name": "vscode-trello-viewer",
  "displayName": "Trello Viewer",
  "description": "Show Trello cards inside of VS Code, and browse boards and lists in tree view.",
  "version": "0.0.1",
  "publisher": "Ho-Wan",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "trelloViewer.test",
        "title": "Trello: Check Key and Token"
      },
      {
        "command": "trelloViewer.authenticate",
        "title": "Trello: Authenticate",
        "icon": {
          "light": "images/light/key.svg",
          "dark": "images/dark/key.svg"
        }
      },
      {
        "command": "trelloViewer.setCredentials",
        "title": "Trello: Set Credentials"
      },
      {
        "command": "trelloViewer.resetCredentials",
        "title": "Trello: Reset Credentials",
        "icon": {
          "light": "images/light/x.svg",
          "dark": "images/dark/x.svg"
        }
      },
      {
        "command": "trelloViewer.showTrelloInfo",
        "title": "Trello: Show Saved Credentials",
        "icon": {
          "light": "images/light/eye.svg",
          "dark": "images/dark/eye.svg"
        }
      },
      {
        "command": "trelloViewer.refresh",
        "title": "Trello: Refresh",
        "icon": {
          "light": "images/light/refresh.svg",
          "dark": "images/dark/refresh.svg"
        }
      },
      {
        "command": "trelloViewer.refreshFavoriteList",
        "title": "Trello: Refresh Favorite List",
        "icon": {
          "light": "images/light/refresh.svg",
          "dark": "images/dark/refresh.svg"
        }
      },
      {
        "command": "trelloViewer.resetFavoriteList",
        "title": "Trello: Reset Favorite List",
        "icon": {
          "light": "images/light/x.svg",
          "dark": "images/dark/x.svg"
        }
      },
      {
        "command": "trelloViewer.setFavoriteListByClick",
        "title": "Trello: Set as favorite list",
        "icon": {
          "light": "images/light/star.svg",
          "dark": "images/dark/star.svg"
        }
      }
    ],
    "configuration": {
      "title": "Trello Viewer",
      "properties": {
        "trelloViewer.viewColumn": {
          "type": "integer",
          "default": 2,
          "description": "Specifies which editor column markdown previewer opens at.\n-1 = Active, -2 = Beside, 1 = One, 2 = Two, etc.",
          "scope": "resource"
        },
        "trelloViewer.starredBoardsOnly": {
          "type": "boolean",
          "default": true,
          "description": "Controls whether to display starred boards only or all boards.",
          "scope": "resource"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "trelloViewer.setFavoriteListByClick",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "trelloViewer.authenticate",
          "when": "view == trelloTreeView",
          "group": "navigation@1"
        },
        {
          "command": "trelloViewer.resetCredentials",
          "when": "view == trelloTreeView",
          "group": "navigation@2"
        },
        {
          "command": "trelloViewer.showTrelloInfo",
          "when": "view == trelloTreeView",
          "group": "navigation@3"
        },
        {
          "command": "trelloViewer.refresh",
          "when": "view == trelloTreeView",
          "group": "navigation@4"
        },
        {
          "command": "trelloViewer.refreshFavoriteList",
          "when": "view == trelloViewFavoriteList",
          "group": "navigation@5"
        },
        {
          "command": "trelloViewer.resetFavoriteList",
          "when": "view == trelloViewFavoriteList",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "trelloViewer.setFavoriteListByClick",
          "when": "view == trelloTreeView && viewItem == list",
          "group": "inline@5"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "trelloViewer",
          "title": "Trello Viewer",
          "icon": "images/dark/browser.svg"
        }
      ]
    },
    "views": {
      "trelloViewer": [
        {
          "id": "trelloTreeView",
          "name": "Trello Boards"
        },
        {
          "id": "trelloViewFavoriteList",
          "name": "Favorite List"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.21",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "event-stream": "^3.3.4"
  }
}
